
{  
  "compilerOptions": {  
    "target": "ES2017",                          // Specify ECMAScript target version  
    "module": "commonjs",                     // Specify module code generation  
    // "outDir": "./dist",                       // Redirect output structure to the './dist' directory  
    // "rootDir": "./src",                       // Specify the root directory of input files  
    "strict": true,                           // Enable all strict type-checking options  
    "esModuleInterop": true,                   // Enables emit interoperability between CommonJS and ES modules  
    "skipLibCheck": true,                     // Skip type checking of declaration files  
    "moduleResolution": "node",                     /* Specify how TypeScript looks up a file from a given module specifier. */
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing  
    "lib": ["ES2017", "DOM"], // or your desired libraries 
     

  },  
  // "include": ["src/**/*"],                     // Include all TypeScript files in the 'src' directory  
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files  
}