{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", // Or "esnext" if using ES modules
    "strict": true,
    "outDir": "./dist", // Redirect output structure to the dist folder
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true, // Optionally prevent TypeScript from checking .d.ts files
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
